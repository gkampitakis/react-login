{
	"name": "server",
	"version": "1.0.0",
	"description": "Authentication Routes",
	"main": "index.js",
	"scripts": {
		"test": "npm run clean && jest",
		"tsc": "npm run clean && tsc",
		"clean": "rimraf dist coverage",
		"start:prod": "NODE_ENV=prod node dist/server.js",
		"start:dev": "NODE_ENV=dev ts-node-dev --poll --respawn --transpileOnly server.ts"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"fastify": "^2.13.1",
		"fastify-cors": "^3.0.3"
	},
	"devDependencies": {
		"husky": "^4.2.5",
		"@typescript-eslint/eslint-plugin": "^3.0.0",
		"@typescript-eslint/parser": "^3.0.0",
		"typescript": "3.9.3",
		"@types/dotenv": "^8.2.0",
		"@types/jest": "^25.2.3",
		"@types/node": "^14.0.4",
		"jest": "^26.0.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.0.0",
		"ts-node-dev": "^1.0.0-pre.44"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/routes.ts",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 95,
				"functions": 95,
				"lines": 95,
				"statements": 95
			}
		}
	},
	"keywords": [
		"server",
		"authentication"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC"
}
