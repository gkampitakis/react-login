{
	"name": "server",
	"version": "1.0.0",
	"description": "Authentication Routes",
	"main": "index.js",
	"scripts": {
		"test": "npm run clean && jest",
		"format": "prettier --write ./src/**/*",
		"tsc": "npm run clean && tsc",
		"clean": "rimraf dist coverage",
		"start:prod": "NODE_ENV=prod node dist/server.js",
		"start:dev": "NODE_ENV=dev ts-node-dev --poll --respawn --transpileOnly server.ts",
		"eslint": "eslint src/**/*.ts",
		"keygen": "sh scripts/private_key.sh"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"dotenv": "^8.2.0",
		"fastify": "^2.14.1",
		"fastify-cookie": "^3.6.1",
		"fastify-cors": "^3.0.3",
		"node-twitter-api": "^1.8.0"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/dotenv": "^8.2.0",
		"@types/jest": "^26.0.3",
		"@types/node": "^14.0.9",
		"@typescript-eslint/eslint-plugin": "^3.1.0",
		"@typescript-eslint/parser": "^3.1.0",
		"eslint": "^7.1.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-plugin-import": "^2.20.2",
		"husky": "^4.2.5",
		"jest": "^26.0.1",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.0",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.9.3"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/routes.ts",
			"!src/**/*.d.ts",
			"!src/**/*/index.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 95,
				"functions": 95,
				"lines": 95,
				"statements": 95
			}
		}
	},
	"keywords": [
		"server",
		"authentication"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged && npm run eslint"
		}
	}
}
